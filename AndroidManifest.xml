<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nilriri.android.Storekeeper" android:versionName="0.0.1" android:versionCode="12">
	<application android:icon="@drawable/icon"
		android:debuggable="false" android:label="Storekeeper">
		<!--
				android:screenOrientation="portrait"
			-->
		<activity android:name="StoreKeeperMain" android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".About" android:label="@string/about_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>
		<activity android:name=".Alert" android:label="@string/alert_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>

		<activity android:name=".Prefs" android:label="@string/settings_title">
		</activity>

	</application>
	<uses-sdk android:minSdkVersion="7"/>


	<uses-permission android:name="android.permission.WRITE_OWNER_DATA"></uses-permission>
	<uses-permission android:name="android.permission.CLEAR_APP_USER_DATA"></uses-permission>

</manifest> 
